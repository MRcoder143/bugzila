


          <%= form_with model: @user do |f| %>

<div >


            <%= f.label :name ,class:"form-control" %>
            <%= f.text_field :name,class:"form-control" %>



          <div>


            <%= f.label :email ,class:"form-control"%>
            <%= f.text_field :email ,class:"form-control"%>

          <div>
            <%= f.label :password ,class:"form-control"%>
            <%= f.password_field :password ,class:"form-control"%>
          </div>



          <div>

            <%= f.label :usertype ,class:"form-control"%>
<br>
<%= f.select :usertype, options_for_select(User.usertypes.map {|key, value| [key.titleize, User.usertypes.key(value)]}, @user.usertype) %>
   </div>



          <br>
          <div>
            <%= f.submit %>
          </div>


          <% end  %>
